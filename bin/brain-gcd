#!/usr/bin/env php
<?php
require_once __DIR__ . '/../vendor/autoload.php';

use Php\Project45\Engine;

function gcd($a, $b) {
    while ($b !== 0) {
        [$a, $b] = [$b, $a % $b];
    }
    return $a;
}
function brainGcd()
{
    $gameRules = "Find the greatest common divisor of given numbers.";

    $generateRound = function (){
    $num1 = rand(10,100);
    $num2 = rand(10,100);
    $question = "$num1 $num2";
    $correctAnswer = gcd($num1, $num2);

        return [$question, $correctAnswer];
    };
    Engine\games($gameRules, $generateRound);
}
brainGcd();
